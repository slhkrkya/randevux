generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model User {
  id           String        @id @default(uuid()) @db.Uuid
  email        String        @unique @db.Citext
  passwordHash String
  name         String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt       @db.Timestamptz(6)

  appointmentsCreated Appointment[] @relation("CreatorAppointments")
  appointmentsInvited Appointment[] @relation("InviteeAppointments")
}

model Appointment {
  id        String   @id @default(uuid()) @db.Uuid
  title     String
  startsAt  DateTime @db.Timestamptz(6)
  endsAt    DateTime @db.Timestamptz(6)
  status    AppointmentStatus @default(PENDING)
  notes     String?

  creatorId String   @db.Uuid
  inviteeId String   @db.Uuid
  creator   User     @relation("CreatorAppointments", fields: [creatorId], references: [id])
  invitee   User     @relation("InviteeAppointments", fields: [inviteeId], references: [id])

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt       @db.Timestamptz(6)

  @@index([creatorId, startsAt])
  @@index([inviteeId, startsAt])

  @@unique([creatorId, startsAt, endsAt])
}
